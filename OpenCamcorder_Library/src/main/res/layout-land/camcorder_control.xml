<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/control_bar"
    android:layout_width="76dp"
    android:layout_height="match_parent"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="13dp"
    android:orientation="vertical"
    android:gravity="center">

    <com.opensource.opencamcorder.widget.RotateImageView
        android:id="@+id/riv_cancel"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:clickable="true"
        android:focusable="false" />
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">
        <com.opensource.opencamcorder.widget.ShutterButton
            android:id="@+id/shutter_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/btn_shutter"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="center"
            android:src="@drawable/btn_ic_camera_shutter" />
    </FrameLayout>
    <com.opensource.opencamcorder.widget.RotateImageView
        android:id="@+id/riv_ok"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:clickable="true"
        android:focusable="false" />
</LinearLayout>

